pipeline {
    agent any
    stages {
        stage('Identify-user') {
            steps {
                echo "Identify User"
            }
        }
        stage('Wait for user to input text?') {
            steps {
               script {
                 def userInput = input(id: 'userInput', message: 'Select Environment to Deploy',
                 parameters: [[$class: 'ChoiceParameterDefinition', defaultValue: 'strDef',
                 description:'Environment List', name:'nameChoice', choices: "QA\nUAT\nProduction\nDevelop\nMaster"]
                ])
                println(userInput); //Use this value to branch to different logic if needed
               }
            }
        }
        stage('Build') {
            steps {
                echo "Input ${userInput}"
            }
        }
    }

}
